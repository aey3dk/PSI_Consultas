                </div>
            </div>
        </div>

        <p style="color: red;">
            @Html.ValidationSummary()
        </p>

        String mensagem = ViewBag.Mensagem;

        if (mensagem != null)
        {
            if (!mensagem.Contains("Erro"))
            {
                <div class="alert alert-info">
                    @ViewBag.Mensagem
