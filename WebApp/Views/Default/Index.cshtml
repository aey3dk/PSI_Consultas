<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>PSI Consultas</title>
    <link rel="icon" href="Resources\PSI.ico" />
    <link href="~/Resources/css/bootstrap.css" rel="stylesheet" />
    <script src="~/Resources/js/jquery-1.11.1.js"></script>
    <script src="~/Resources/js/bootstrap.js"></script>
    <style type="text/css">
        body {
            padding-top: 70px;
        }
    </style>
</head>
<body>
    <div>
        <div class="navbar navbar-default navbar-fixed-top" role="navigation">
            <div class="container">
                <div class="navbar-header">
                    <img class="navbar-left" src="~/Resources/PSI.ico" width="45" height="45" style="margin-right: 10px;" />
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="/Default/Index">PSI Consultas</a>
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Cadastro<span class="caret"></span></a>
                            <ul class="dropdown-menu" role="menu">
                                <li><a href="/Paciente" target="conteudo">Paciente</a></li>
                            </ul>
                        </li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <li><a href="/TesteLightBase/Cadastro" target="conteudo">Teste LightBase</a></li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Base de dados<span class="caret"></span></a>
                            <ul class="dropdown-menu" role="menu">
                                <li><a href="/Default/RecriarBaseDados">Recriar</a></li>
                                <li><a href="/Default/PopularBaseDados">Popular</a></li>
                            </ul>
                        </li>
                        <li><a href="#contact" target="conteudo">Contatos</a></li>
                        <li><a href="#about" target="conteudo">Sobre</a></li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="well container">
            @{
                String mensagem = ViewBag.Mensagem;

                if (mensagem != null)
                {
                    if (!mensagem.Contains("Erro"))
                    {
                        <div class="alert alert-info">
                            @ViewBag.Mensagem
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-danger">
                            @ViewBag.Mensagem
                        </div>
                    }
                }
            }
            <div style="height: 650px">
                <iframe name="conteudo" class="embed-responsive-item" src="/Default/Home" width="100%" height="100%" frameborder="0"></iframe>
            </div>
        </div>
    </div>
</body>
</html>
